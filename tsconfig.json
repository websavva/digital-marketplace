{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "types": ["@testing-library/jest-dom"],
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": false,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["src/*"],
      "#server/*": ["src/server/*"],
      "#middleware-aggregator": [
        "src/modules/middleware-aggregator/alias-mock.d.ts"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "scripts",
    "vitest",
    "playwright",
    ".next/types/**/*.ts",
    "payload.config.ts",
    "next.config.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
